{% extends 'base.html.twig' %}
{% block title %}Profile{% endblock %}
{% block main %}
	{{ parent() }}

        <!-- Projects-->
        <section class="projects-section bg-light" id="projects">
            <div class="container px-4 px-lg-5">

                <!-- Project Two Row-->
                <div class="row gx-0 justify-content-center">
                    <div class="col-lg-12 order-lg-first">
	<div class="bg-light border row align-items-center justify-content-center my-3">
		<div class="col m-3 p-3 text-start">
			<div class="my-2 p-2">
				<h3>Profile</h3>
				{# <p><b>#</b> {{app.user.id}}</p> #}
				<p><b>Nombre:</b> {{app.user.displayname}}</p>
				<p><b>Email:</b> {{app.user.email}}</p>
				<p><b>Teléfono:</b> {{app.user.phone ?? 'Sin especificar'}}</p>
				<p><b>Ciudad:</b> {{app.user.city ?? 'Sin especificar'}}</p>
				<p><b>País:</b> {{app.user.country ?? 'Sin especificar'}}</p>
			</div>
			<div class="my-2 p-2">
				{# <h3>Operaciones</h3> #}
				<ul>
					{# <li><a href="#">Modificar mis datos</a>.</li> #}
					<li><a href="{{ path('home') }}">Baja de usuario</a></li>
				</ul>
			</div>
		</div>
	</div>

                    </div>
                </div>
            </div>
        </section>



{% endblock %}







