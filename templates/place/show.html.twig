{% extends 'base.html.twig' %}
{% block title %}Place{% endblock %}
{% block main %}
    {{ parent() }}

        <!-- Projects-->
        <section class="projects-section bg-light" id="projects">
            <div class="container px-4 px-lg-5">

                <!-- Project Two Row-->
                <div class="row gx-0 justify-content-center">
                    <div class="col-lg-6 order-lg-first">
                        <div style="margin-bottom: 30px;" >
                            <a href="{{ path('app_place_index') }}">back to list</a>
                            <a  style="    margin-left: 60%;" href="{{ path('app_place_edit', {'id': place.id}) }}">edit</a>

                        </div>
                        <h1>Place</h1>

                        <table class="table">
                            <tbody>
                                <tr>
                                    <th>Id</th>
                                    <td>{{ place.id }}</td>
                                </tr>
                                <tr>
                                    <th>Name</th>
                                    <td>{{ place.name }}</td>
                                </tr>
                                <tr>
                                    <th>Valoration</th>
                                    <td>{{ place.valoration }}</td>
                                </tr>
                                <tr>
                                    <th>Country</th>
                                    <td>{{ place.country }}</td>
                                </tr>
                                <tr>
                                    <th>Type</th>
                                    <td>{{ place.type }}</td>
                                </tr>
                            </tbody>
                        </table>
                        {{ include('place/_delete_form.html.twig') }}

                    </div>
                </div>
            </div>
        </section>

{% endblock %}

